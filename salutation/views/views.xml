<odoo>
    <data>
        <record id="view_partner_form_inherit" model="ir.ui.view">
            <field name="name">res.partner.form.inherit.salutation</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <!-- Insert fields after the radio button for company_type and before the name field -->
                <xpath expr="//field[@name='company_type']" position="after">
                    <div invisible="context.get('default_company_type') == 'company'">
                        <group string="Salutation Info">
                            <field name="name_given"/>
                            <field name="name_family"/>
                            <field name="name_salutation"/>
                        </group>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>